<Page x:Class="pr21.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr21.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="#FFFFFF">
        <Grid Background="#8B8B8B" VerticalAlignment="Top" Height="78">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="43*" />
                <ColumnDefinition Width="10*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Image Source="/Image/icon.png" Margin="7,10,29,21" />
            </Grid>
            <Grid Grid.Column="1">
                <Label Content="Учет входящих и исходящих документов" FontWeight="Bold" Foreground="White" FontSize="22" VerticalAlignment="Center" />
            </Grid>
            <Grid Grid.Column="2">
                <Button Click="Exit" Content="Выйти" VerticalAlignment="Top" Height="22" Margin="0,10,10,0" Background="White" />
            </Grid>
        </Grid>
        <ScrollViewer VerticalAlignment="Top" Margin="10,83,10,0" Height="300" HorizontalScrollBarVisibility="Hidden">
            <StackPanel x:Name="parent">

            </StackPanel>
        </ScrollViewer>
        <Button Click="AddDocuments" Content="Добавить" Width="100" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Background="White" />
    </Grid>
</Page>