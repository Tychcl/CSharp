<Page x:Class="pr21.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr21.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid Background="#FFFFFF">
        <Grid Background="#8B8B8B" VerticalAlignment="Top" Height="78">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="43*" />
                <ColumnDefinition Width="10*" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Image Source="/Image/icon.png" Margin="7,10,29,21" />
            </Grid>
            <Grid Grid.Column="1">
                <Label Content="Добавить документ" FontWeight="Bold" Foreground="White" FontSize="22" VerticalAlignment="Center" />
            </Grid>
            <Grid Grid.Column="2">
                <Button Click="Back" Content="Вернуться" VerticalAlignment="Top" Height="22" Margin="0,10,10,0" Background="White" />
            </Grid>
        </Grid>
        <StackPanel Orientation="Horizontal" Margin="0,80,0,0">
            <StackPanel>
                <Image x:Name="img" Source="/Image/icon-black.png" Height="150" Width="150" />
                <Button Click="SelectImage" Content="Выбрать картинку" Margin="10,0,10,0" Height="30"/>
            </StackPanel>
            <StackPanel Width="630" Margin="10,0,10,0">
                <Label Content="Наименование"/>
                <TextBox x:Name="tb_name"/>
                <Label Content="Ответственный"/>
                <TextBox x:Name="tb_user"/>
                <Label Content="Код документа"/>
                <TextBox x:Name="tb_id"/>
                <Label Content="Дата поступления"/>
                <TextBox x:Name="tb_date"/>
                <Label Content="Статус"/>
                <ComboBox x:Name="tb_status">
                    <TextBlock Text="абоба"></TextBlock>
                    <TextBlock>Исходящий</TextBlock>
                </ComboBox>
                <Label Content="Направление"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Width="540" x:Name="tb_vector"/>
                    <Button Content="Сохранить" x:Name="tb_btnAdd" Click="AddDocument" Margin="10,0,0,0" Padding="10,2,10,2" Width="80" Height="22"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
