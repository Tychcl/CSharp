<UserControl x:Class="pr21.Elements.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr21.Elements"
             mc:Ignorable="d" 
                         d:DesignHeight="180" d:DesignWidth="800">
    <Grid >
        <Grid Margin="0,0,0,37">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220*" />
                <ColumnDefinition Width="313*" />
                <ColumnDefinition Width="267*" />
            </Grid.ColumnDefinitions>
            <Grid Margin="0,0,60,0">
                <Image x:Name="img" Source="/Image/icon-black.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="145" Margin="0,2,0,0" />
            </Grid>
            <Grid Grid.Column="1" Margin="0,20,0,0">
                <Label Content="Наименование" x:Name="lName" FontWeight="Bold" FontSize="14" VerticalAlignment="Top" />
                <Label Content="Ответственный: Иванов И.И" x:Name="lUser"  FontSize="14" VerticalAlignment="Top" Margin="0,46,0,0" />
                <Label Content="Код документа: 000-000" x:Name="lCode"  FontSize="14" VerticalAlignment="Top" Margin="0,88,0,0" />
            </Grid>
            <Grid Grid.Column="2" Margin="0,20,0,0">
                <Label Content="Дата поступления: 00.00.0000" x:Name="lDate" FontSize="14" VerticalAlignment="Top" />
                <Label Content="Статус: Входящий" x:Name="lStatus"  FontSize="14" VerticalAlignment="Top" Margin="0,46,0,0" />
                <Label Content="Направления: Строительство" x:Name="lDirect"  FontSize="14" VerticalAlignment="Top" Margin="0,88,0,0" />
            </Grid>
        </Grid>
        <Grid VerticalAlignment="Bottom">
            <Button Click="EditDocument" Content="Изменить" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="#FFFFFF" Width="95" Margin="0,0,129,10" Height="22" />
            <Button Click="DeleteDocument" Content="Удалить" VerticalAlignment="Bottom" HorizontalAlignment="Right" Background="#FFFFFF" Width="95" Margin="0,0,10,10" Height="22" />
        </Grid>
    </Grid>
</UserControl>
