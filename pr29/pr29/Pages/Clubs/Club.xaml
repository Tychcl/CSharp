<Page x:Class="pr29.Pages.Club"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr29.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Club">

    <Grid>
        <Grid Background="White" Height="60" VerticalAlignment="Top">

            <Grid VerticalAlignment="Center" HorizontalAlignment="Right">
                <Label x:Name="UserName" VerticalContentAlignment="Center" Content="UserName" FontSize="16" FontWeight="Medium" Margin="10" Foreground="Black"/>
            </Grid>
            <Button x:Name="CompButton" Click="Comp_Click" Height="30" Width="80" Content="Компьютеры" HorizontalAlignment="Left" Margin="10" />
            <Button x:Name="OrderButton" Click="Order_Click" Height="30" Width="80" Content="Заказы" HorizontalAlignment="Left" Margin="100,10,10,10" />
        </Grid>

        <Grid Background="White" Margin="0,60,0,0">
            <Border ClipToBounds="True" BorderThickness="0,1.5,0,0"  BorderBrush="#FF292929">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="25" ShadowDepth="0" Color="White" Opacity="1"  />
                </Border.Effect>
            </Border>
            <StackPanel x:Name="ClubParent" Margin="100,0,100,50" MaxWidth="1000">

            </StackPanel>
            <Button Click="AddClub" Visibility="Hidden" x:Name="add" Content="Добавить клуб" Height="20" Width="100" VerticalAlignment="Bottom" Margin="0,0,0,20" />
        </Grid>
    </Grid>
</Page>
