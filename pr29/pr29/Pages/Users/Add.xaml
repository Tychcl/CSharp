<Page x:Class="pr29.Pages.Users.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr29.Pages.Users"
      mc:Ignorable="d" 
      Title="Add">
    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Width="80" Height="80" VerticalAlignment="Top" Margin="10" Source="/Images/pc.jpg" />
        <Button Click="EditClub" Height="25" Content="добавить" VerticalAlignment="Top" Margin="10,95,10,0"
Background="#FF46FD00" BorderBrush="#FF46FD00" Foreground="White" x:Name="btn"/>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Дата аренды:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
            <DatePicker x:Name="RentStart" Text="Наименование" VerticalAlignment="Top" Margin="10,36,10,0" Height="25"
VerticalContentAlignment="Center" />
            <Label Content="Время аренды:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,66,0,0"/>
            <TextBox x:Name="RentTime" VerticalAlignment="Top" Margin="10,92,10,0" Height="25"
VerticalContentAlignment="Center"/>
            <Label Content="Продолжительность:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Column="1"/>
            <TextBox x:Name="dur" VerticalAlignment="Top" Margin="10,36,10,0" Height="25"
VerticalContentAlignment="Center" Grid.Column="1"/>
            <Label Content="Клуб:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,66,0,0" Grid.Column="1"/>
            <ComboBox x:Name="ClubCB" VerticalAlignment="Top" Margin="10,92,10,0" Height="25"
VerticalContentAlignment="Center" Grid.Column="1"/>
        </Grid>
        <Label Content="ФИО:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,125,0,0" Grid.Column="1"/>
        <TextBox x:Name="FIO" VerticalAlignment="Top" Margin="10,151,10,0" Height="25"
VerticalContentAlignment="Center" Grid.Column="1"/>
    </Grid>
</Page>
