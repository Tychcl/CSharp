<Page x:Class="pr19.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr19.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">


    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/image/background.png"/>
        </Grid.Background>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Background" Value="Black"/>
                <Setter Property="Foreground" Value="DarkGray"/>
                <Setter Property="BorderBrush" Value="LightGray"/>
            </Style>
        </Grid.Resources>

        <Grid VerticalAlignment="Top" Height="50" Background="#7F000000">
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                </Style>
            </Grid.Resources>

            <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Source="/image/vk.png"/>
            <Image Width="30" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,10,0,0" Source="/image/telegramm.png"/>
            <Label Content="Зоомагазин" Margin="140,5,140,5" Foreground="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <Button x:Name="bascet" HorizontalAlignment="Right" VerticalAlignment="Top" Width="125" Height="24" Margin="0,10,10,0" Content="Корзина (0)"/>
            <Button x:Name="back" Click="OpenCategories" HorizontalAlignment="Right" VerticalAlignment="Top" Width="125" Height="24" Margin="0,10,140,0" Content="Назад"/>
        </Grid>

        <ScrollViewer Margin="5,55,5,5" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
            <StackPanel x:Name="parent" Orientation="Horizontal">

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
