<UserControl x:Class="pr19.Elements.cat"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr19.Elements"
             mc:Ignorable="d" Width="223" Height="271">
    <Grid Width="200">
        <Grid Margin="15" Background="#7FFFFFFF" Height="210" Width="170">
            <Image x:Name="image" MouseDown="OpenCategory" Margin="10,10,10,0" VerticalAlignment="Top" Height="190" Stretch="UniformToFill" Source="/image/background.png"/>
            <Border CornerRadius="7" Background="LightGray" Margin="0,157,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="Gray" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="3"/>
                </Border.Effect>
                <Label x:Name="categoryName" Content="Кабинеты" FontWeight="Bold" Foreground="Black"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
