<Page x:Class="pr24.Pages.Redact.Staff"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr24.Pages.Redact"
      mc:Ignorable="d" 
      Title="Library" d:MinWidth="150">
    <Grid Background="LightGray">
        <ScrollViewer>
            <StackPanel Background="DarkGray" Margin="10,10,10,0" VerticalAlignment="Top">
                <Label Content="ФИО" HorizontalAlignment="Left"/>
                <TextBox x:Name="fio" Margin="5,0,5,0" Height="22"/>
                <Label Content="Почта" HorizontalAlignment="Left"/>
                <TextBox x:Name="email" Margin="5,0,5,0" Height="22"/>
                <Label Content="Пароль" HorizontalAlignment="Left"/>
                <TextBox x:Name="pas" Margin="5,0,5,0" Height="22"/>
                <Label Content="Библиотека" HorizontalAlignment="Left"/>
                <ComboBox x:Name="lib" Margin="5,0,5,0" Height="22"/>
                <Label Content="Профессия" HorizontalAlignment="Left"/>
                <TextBox x:Name="pro" Margin="5,0,5,0" Height="22"/>
                <Label Content="День рождения" HorizontalAlignment="Left"/>
                <DatePicker x:Name="bd" Margin="5,0,5,0"/>
                <Label Content="Дата начала работы" HorizontalAlignment="Left"/>
                <DatePicker x:Name="date" Margin="5,0,5,0"/>
                <Label Content="Образование" HorizontalAlignment="Left"/>
                <TextBox x:Name="edu" Margin="5,0,5,0" Height="22"/>
                <Label Content="Зарплата" HorizontalAlignment="Left"/>
                <TextBox x:Name="pay" Margin="5,0,5,0" Height="22" KeyDown="check"/>
                <Grid>
                    <Button x:Name="btn" Content="Добавить" Click="add" Height="22" Margin="0,15,5,10" HorizontalAlignment="Right" MinWidth="60"/>
                    <Button Content="Назад" Height="22" Click="back" Margin="5,15,0,10" HorizontalAlignment="Left" MinWidth="60"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
