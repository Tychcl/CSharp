<Page x:Class="pr24.Pages.Redact.Refill"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr24.Pages.Redact"
      mc:Ignorable="d" 
      Title="Fond" d:MinWidth="150">
    <Grid Background="LightGray">
        <ScrollViewer>
            <StackPanel Background="DarkGray" Margin="10,10,10,0" VerticalAlignment="Top">
                <Label Content="Фонд" HorizontalAlignment="Left"/>
                <ComboBox x:Name="fondc" Margin="5,0,5,0" Height="22"/>
                <Label Content="Сотрудник" HorizontalAlignment="Left"/>
                <ComboBox x:Name="staf" Margin="5,0,5,0" Height="22"/>
                <Label Content="Тип" HorizontalAlignment="Left"/>
                <ComboBox x:Name="type" Margin="5,0,5,0" Height="22"/>
                <Label Content="Дата пополнения" HorizontalAlignment="Left"/>
                <DatePicker x:Name="daterefill" Margin="5,0,5,0"/>
                <Label Content="Источник" HorizontalAlignment="Left"/>
                <TextBox x:Name="source" Margin="5,0,5,0" Height="22"/>
                <Label Content="Издатель" HorizontalAlignment="Left"/>
                <TextBox x:Name="publisher" Margin="5,0,5,0" Height="22"/>
                <Label Content="Дата публикации" HorizontalAlignment="Left"/>
                <DatePicker x:Name="datepublication" Margin="5,0,5,0"/>
                <Label Content="Колличество" HorizontalAlignment="Left"/>
                <TextBox x:Name="count" Margin="5,0,5,0" Height="22" KeyDown="check"/>
                <Grid>
                    <Button x:Name="btn" Content="Добавить" Click="add" Height="22" Margin="0,15,5,10" HorizontalAlignment="Right" MinWidth="60"/>
                    <Button Content="Назад" Height="22" Click="back" Margin="5,15,0,10" HorizontalAlignment="Left" MinWidth="60"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
