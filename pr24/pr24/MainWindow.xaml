<Window x:Class="pr24.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr24"
        mc:Ignorable="d"
        Title="Библиотека" MinWidth="300" MinHeight="250" MaxWidth="500" MaxHeight="450">
    <Grid>
        <Grid x:Name="TopMenu" Height="40" VerticalAlignment="Top" Background="#424242" >
            <Button Content="Библиотеки" Click="libs" HorizontalAlignment="Left" Margin="75,10,0,10" FontSize="10" Width="60"/>
            <Button Content="Сотрудники" Click="staffs" HorizontalAlignment="Left" Margin="140,10,0,10" FontSize="10" Width="60"/>
            <Button Content="Пополнения" Click="refills" HorizontalAlignment="Left" Margin="5,10,0,10" FontSize="10" Width="65"/>
            <Button Content="Фонды" Click="fonds" HorizontalAlignment="Left" Margin="205,10,0,10" FontSize="10"/>
            <Button HorizontalAlignment="Right" Margin="0,10,5,10" Content="Logout" Click="logout" FontSize="10"/>
        </Grid>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
