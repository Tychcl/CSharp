<Window x:Class="_14pr2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_14pr2"
        mc:Ignorable="d"
        Title="Паспортный стол" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <ListView x:Name="lv_passport" Margin="10,10,10, 40" SelectionChanged="SelectChange">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Фото" Width="40">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Image}" Width="30" Height="40" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Имя" Width="100" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Фамилия" Width="100" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Отчество" Width="100" DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Паспорт" Width="100" DisplayMemberBinding="{Binding Issued}"/>
                    <GridViewColumn Header="Дата выдачи" Width="100" DisplayMemberBinding="{Binding DateOfIssued}"/>
                    <GridViewColumn Header="Код подразделения" Width="100" DisplayMemberBinding="{Binding DepartmentCode}"/>
                    <GridViewColumn Header="Серия и номер" Width="100" DisplayMemberBinding="{Binding SeriesAndNumber}"/>
                    <GridViewColumn Header="Дата рождения" Width="100" DisplayMemberBinding="{Binding DateOfBirth}"/>
                    <GridViewColumn Header="Место рождения" Width="100" DisplayMemberBinding="{Binding PlaceOfBirth}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="TBSearch" KeyDown="search" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="300" Height="25"/>
        <Label Content="Поиск" HorizontalAlignment="Left" Margin="310,0,0,10" VerticalAlignment="Bottom" Height="25"/>
        <Button Click="Add" Content="Добавить" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Height="25"/>
        <Button x:Name="updbtn" Click="Update" Content="Изменить" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75" Height="25"/>
        <Button x:Name="delbtn" Click="Delete" Content="Удалить" HorizontalAlignment="Right" Margin="0,0,170,10" VerticalAlignment="Bottom" Width="75"
Height="25"/>
    </Grid>
</Window>
