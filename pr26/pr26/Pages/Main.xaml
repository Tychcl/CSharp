<Page x:Class="pr26.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr26.Pages"
      mc:Ignorable="d" MinHeight="300" MinWidth="300" Background="#0099ff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Blue" >
            <Label Content="✈ Управление авиалиниями" Foreground="White" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Height="32"/>
            <Button Click="exit" Content="Выход" HorizontalAlignment="Right" VerticalAlignment="Center" Height="20" Width="50" Margin="0,0,7,0"/>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Width="240" VerticalAlignment="Center">
                <Label Content="Поиск дешёвых авиабилетов" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" FontSize="16" Width="240"/>
                <Label Content="Лучший способ купить авиабилеты дешего" Foreground="White" HorizontalAlignment="Center" FontSize="9"/>
                <Label Content="Откуда:" Foreground="White" FontSize="10"/>
                <TextBox x:Name="from"/>
                <Label  Content="Куда:" Foreground="White" FontSize="10"/>
                <TextBox x:Name="to"/>
                <Button Click="search" Content="Найти" Padding="7,0,7,0" HorizontalAlignment="Right" Margin="0,3,0,0" Background="Orange"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
