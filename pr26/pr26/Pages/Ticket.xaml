<Page x:Class="pr26.Pages.Ticket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr26.Pages"
      mc:Ignorable="d" 
      MinHeight="300" MinWidth="300"
      Title="Ticket">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="Blue" >
            <Label Content="✈ Управление авиалиниями" Foreground="White" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Height="32"/>
            <Button Click="back" Content="Вернуться" HorizontalAlignment="Right" VerticalAlignment="Center" Height="20" Margin="0,0,7,0"/>
        </Grid>
        <Grid Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Visible">
                <StackPanel x:Name="parent"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
