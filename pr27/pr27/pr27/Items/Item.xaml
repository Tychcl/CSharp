<UserControl x:Class="pr27.Items.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr27.Items"
             mc:Ignorable="d" MinWidth="300">
    <Grid Margin="10,10,10,0">
        <Border BorderBrush="#FF000000" BorderThickness="2" CornerRadius="5" Background="LightGray" Margin="0,0,0,10">
            <Grid>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Label x:Name="name" Content="Name" Margin="3,3,0,0"/>
                    <Label x:Name="des" Content="Des" Margin="3,0,0,0"/>
            </StackPanel>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="3" Background="IndianRed" Margin="0,3,3,5">
                        <Button x:Name="delete" Content="Удалить" BorderThickness="0" Margin="2" Background="IndianRed" Click="del"/>
                    </Border>
                    <Border BorderBrush="#FF000000" BorderThickness="1" CornerRadius="3" Background="White" Margin="0,0,3,3">
                        <Button x:Name="redact" Content="Изменить" BorderThickness="0" Margin="2" Background="White" Click="red"/>
        </Border>
        </StackPanel>
            </Grid>
        </Border>
        <Rectangle Height="1" Fill="Black" Stroke="Black" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
