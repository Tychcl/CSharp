<Page x:Class="pr27.Pages.redactafisha"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr27.Pages"
      mc:Ignorable="d" 
      Title="redact">
    <ScrollViewer Margin="10">
        <StackPanel>
            <Label Content="Театр"/>
                <ComboBox x:Name="cbox"/>
                <Label Content="Фильм"/>
                <TextBox x:Name="film"/>
                <Label Content="Дата"/>
            <DatePicker x:Name="date"/>
            <Label Content="Цена"/>
            <TextBox x:Name="price"/>
            <Grid>
                <Button Content="Назад" Click="back" HorizontalAlignment="Left"/>
                <Button x:Name="btn" Content="Добавить" HorizontalAlignment="Right" Click="add"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
