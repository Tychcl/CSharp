<Page x:Class="_15pr.Pages.Stopwatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_15pr.Pages"
      mc:Ignorable="d" Title="Stopwatch">
    <Grid Background="DarkCyan" HorizontalAlignment="Center">
        <StackPanel>
            <Label x:Name="time" Content="00:00:00" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="48"/>
            <StackPanel Orientation="Horizontal">
            <Button x:Name="start" Click="StartStopwatch" Content="Начать" Width="150" Height="30" FontSize="20" Background="White" Foreground="DarkCyan" />
            <Button Content="Интервал" Click="Interval" Width="150" Height="30" FontSize="20" Background="White" Foreground="DarkCyan"/>
            </StackPanel>
            <ListView Height="250" Width="300" Margin="0,15,0,0" x:Name="list">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Номер" Width="50" DisplayMemberBinding="{Binding Id}"/>
                        <GridViewColumn Header="Время" Width="250" DisplayMemberBinding="{Binding Time}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
