<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/"
                    xmlns:local="clr-namespace:TychkclLibraryFund">

    <Style TargetType="local:MainWindow" BasedOn="{StaticResource CWWindowStyle}"/>

    <SolidColorBrush x:Key="NormalColor" Color="#FFDDDDDD"/>
    <SolidColorBrush x:Key="HoverColor" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="PressedColor" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="Fore" Color="#E3CB53"/>
    <SolidColorBrush x:Key="DarkBack" Color="#140033"/>
    <SolidColorBrush x:Key="LightBack" Color="#553743"/>
    <SolidColorBrush x:Key="TitleBack" Color="#632D47"/>

    <Style x:Key="MainMenuButton" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource TitleBack}"/>
        <Setter Property="BorderBrush" Value="{StaticResource TitleBack}"/>
        <Setter Property="BorderThickness" Value="0 0 0 0"/>
        <Setter Property="TextElement.FontFamily" Value="pack://application:,,,/FontAwesome.WPF;component/#FontAwesome"/>
        <Setter Property="TextElement.FontSize" Value="25"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="50"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="border"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="-0.2,0.5" EndPoint="0,0.5" x:Name="gradient">
                                <GradientStop Color="#33585858" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="0.7"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <ContentPresenter
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="BorderThickness"
                                            To="5 0 0 0"
                                            Duration="0:0:0.15"/>
                                        <PointAnimation
                                            Storyboard.TargetName="gradient"
                                            Storyboard.TargetProperty="EndPoint"
                                            To="1.2,0.5" 
                                            Duration="0:0:0.25"/>
                                        <ColorAnimation 
                                            Storyboard.TargetProperty="Foreground.(SolidColorBrush.Color)"
                                            To="#E3CB53" 
                                            Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="BorderThickness"
                                            To="0 0 0 0"
                                            Duration="0:0:0.15"/>
                                        <PointAnimation
                                            Storyboard.TargetName="gradient"
                                            Storyboard.TargetProperty="EndPoint"
                                            To="0,0.5" 
                                            Duration="0:0:0.25"/>
                                        <ColorAnimation Storyboard.TargetProperty="Foreground.(SolidColorBrush.Color)"
                                            To="#632D47" Duration="0:0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="BorderThickness"
                                            To="5 0 0 0"
                                            Duration="0:0:0.15"/>
                                        <ColorAnimation 
                                            Storyboard.TargetProperty="Foreground.(SolidColorBrush.Color)"
                                            To="#E3CB53" 
                                            Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="BorderThickness"
                                            To="0 0 0 0"
                                            Duration="0:0:0.15"
                                            FillBehavior="Stop"/>
                                        <ColorAnimation Storyboard.TargetProperty="Foreground.(SolidColorBrush.Color)"
                                            To="#632D47" Duration="0:0:0:0.15" FillBehavior="Stop"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ItemText" TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource Fore}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="Bahnschrift SemiBold Condensed"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Label">
                    <ContentPresenter 
                        Margin="3 0 0 0" 
                        TextElement.FontFamily="{TemplateBinding FontFamily}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type Button}" x:Key="ItemButton">
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="FontFamily" Value="Webdings"/>
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="{StaticResource TitleBack}" />
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ButtonBase}">
                    <Border
                        x:Name="Chrome"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Margin="0"
                        Background="{TemplateBinding Background}"
                        SnapsToDevicePixels="True">
                        <ContentPresenter
                            ContentTemplate="{TemplateBinding ContentTemplate}"
                            Content="{TemplateBinding Content}"
                            ContentStringFormat="{TemplateBinding ContentStringFormat}"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            Margin="{TemplateBinding Padding}"
                            RecognizesAccessKey="True"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource Fore}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="{x:Type UserControl}" x:Key="USStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type UserControl}">
                    <Border Background="{StaticResource DarkBack}"
                            BorderThickness="0 0 0 2"
                            CornerRadius="7"
                            Margin="15 2 15 5"
                            BorderBrush="{StaticResource Fore}"
                            x:Name="border">
                        <Border.BitmapEffect>
                            <DropShadowBitmapEffect x:Name="DropShadow" Color="Black" Direction="300" Softness="0.4" ShadowDepth="3" Opacity="0.7" />
                        </Border.BitmapEffect>
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="BorderBrush.Color"
                                            To="White"
                                            Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation
                                            Storyboard.TargetName="border"
                                            Storyboard.TargetProperty="BorderBrush.Color"
                                            To="#E3CB53"
                                            Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>