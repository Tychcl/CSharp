<UserControl x:Class="TychkclLibraryFund.Items.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:TychkclLibraryFund.Items"
             mc:Ignorable="d" Style="{StaticResource USStyle}">
    <Grid Margin="7 2 2 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="0">
            <Border BorderThickness="0 0 0 1" BorderBrush="{StaticResource Fore}">
                <Label Content="Name" Style="{StaticResource ItemText}" />
            </Border>
            <Label Content="Info" Style="{StaticResource ItemText}" Margin="0 2 0 0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1" Margin="2 0 0 0">
            <Button fa:Awesome.Content="Edit" Style="{StaticResource ItemButton}"/>
            <Button fa:Awesome.Content="Trash" Style="{StaticResource ItemButton}"/>
            <Button fa:Awesome.Content="Plus" Style="{StaticResource ItemButton}"/>
        </StackPanel>
    </Grid>
</UserControl>
