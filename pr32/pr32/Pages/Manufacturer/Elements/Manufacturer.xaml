<UserControl x:Class="pr32.Pages.Manufacturer.Elements.Manufacturer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr32.Pages.Manufacturer.Elements"
                          mc:Ignorable="d">

    <Grid>
        <!-- Основной контейнер с тенью -->
        <Border BorderBrush="#FFFAFAFA" 
            Margin="0,0,0,20" 
            BorderThickness="1" 
            Background="#FFFAFAFA" 
            CornerRadius="20"
            VerticalAlignment="Top" 
            Height="160">

            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                             Color="Black" 
                             Direction="315" 
                             ShadowDepth="5" 
                             Opacity="0.5"/>
            </Border.Effect>

            <!-- Контейнер содержимого -->
            <Grid Margin="15">
                <!-- Изображение производителя -->
                <Image Width="68" 
                   Source="/Images/ic_Manufacture.png"
                   Height="68" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left" 
                   />

                <!-- Кнопка "Изменить" -->
                <Button Content="Изменить" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="68" 
                    Height="25"
                    BorderBrush="#FFFF9800" 
                    Background="#FFFF9800" 
                    Foreground="White" 
                    FontWeight="Bold"
                    Margin="0,73,0,0" 
                    Click="EditManufacturer">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" 
                                     Color="Black" 
                                     Direction="315" 
                                     ShadowDepth="2" 
                                     Opacity="0.5"/>
                    </Button.Effect>
                </Button>

                <!-- Кнопка "Удалить" -->
                <Button Content="Удалить" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="68" 
                    Height="25" 
                    BorderBrush="Red" 
                    Background="Red" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Margin="0,103,0,0" 
                    Click="DeleteManufacturer">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" 
                                     Color="Black" 
                                     Direction="315" 
                                     ShadowDepth="2" 
                                     Opacity="0.5"/>
                    </Button.Effect>
                </Button>

                <!-- Контейнер полей ввода -->
                <Grid Margin="73,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поле "Наименование поставщика" -->
                    <Label Content="Наименование поставщика:" 
                       Margin="0,0,10,0" 
                       VerticalAlignment="Top"/>
                    <TextBox x:Name="tbName" 
                         IsEnabled="False" 
                         Margin="0,26,10,0" 
                         Height="50" 
                         TextWrapping="Wrap" 
                         Text="" 
                         VerticalContentAlignment="Center" 
                         VerticalAlignment="Top" 
                         Padding="10,0">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                         Color="Black" 
                                         Direction="315" 
                                         ShadowDepth="2" 
                                         Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <!-- Поле "Номер телефона" -->
                    <Label Content="Номер телефона:" 
                       Margin="0,77,10,0" 
                       VerticalAlignment="Top"/>
                    <TextBox x:Name="tbPhone" 
                         IsEnabled="False" 
                         Margin="0,103,10,0" 
                         Height="25" 
                         TextWrapping="Wrap"
                         Text="" 
                         VerticalContentAlignment="Center" 
                         VerticalAlignment="Top" 
                         Padding="10,0">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                         Color="Black" 
                                         Direction="315" 
                                         ShadowDepth="2" 
                                         Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <!-- Поле "Страна" -->
                    <Label Content="Страна:" 
                       Margin="10,0,10,0" 
                       VerticalAlignment="Top" 
                       Grid.Column="1"/>
                    <TextBox x:Name="tbCountry" 
                         IsEnabled="False" 
                         Margin="10,26,10,0" 
                         Height="25" 
                         TextWrapping="Wrap"
                         Text="" 
                         VerticalContentAlignment="Center" 
                         VerticalAlignment="Top" 
                         Padding="10,0" 
                         Grid.Column="1">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                         Color="Black" 
                                         Direction="315" 
                                         ShadowDepth="2" 
                                         Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>

                    <!-- Поле "Почта" -->
                    <Label Content="Почта:" 
                       Margin="10,77,10,0" 
                       VerticalAlignment="Top" 
                       Grid.Column="1"/>
                    <TextBox x:Name="tbEmail" 
                         IsEnabled="False" 
                         Margin="10,103,10,0" 
                         Height="25" 
                         TextWrapping="Wrap"
                         Text="" 
                         VerticalContentAlignment="Center" 
                         VerticalAlignment="Top" 
                         Padding="10,0" 
                         Grid.Column="1">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                         Color="Black" 
                                         Direction="315" 
                                         ShadowDepth="2" 
                                         Opacity="0.5"/>
                        </TextBox.Effect>
                    </TextBox>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

