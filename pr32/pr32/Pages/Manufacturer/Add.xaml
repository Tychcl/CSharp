<Page x:Class="pr32.Pages.Manufacturer.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr32.Pages.Manufacturer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Grid>

        <!-- Основной контейнер с тенью -->
        <Border BorderBrush="#FFAFAFAF" 
            Margin="20" 
            BorderThickness="1" 
            Background="#FFFAFAFA"
            CornerRadius="20">

            <Border.Effect>
                <DropShadowEffect BlurRadius="10" 
                             Color="Black" 
                             Direction="315" 
                             ShadowDepth="5" 
                             Opacity="0.5"/>
            </Border.Effect>

            <!-- Контейнер содержимого -->
            <Grid Margin="15">
                <!-- Логотип производителя -->
                <Image Width="68" 
                   Height="68" 
                   Source="/Images/ic_Manufacture.png"
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left"
                   />

                <!-- Основная форма -->
                <Grid Margin="73,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Наименование производителя -->
                    <Label Content="Наименование поставщика:" 
                       Margin="0,0,10,0" 
                       VerticalAlignment="Top"/>
                    <TextBox x:Name="tbName" 
                         Margin="0,26,10,0" 
                         Height="50" 
                         TextWrapping="Wrap" 
                         VerticalContentAlignment="Center" 
                         VerticalAlignment="Top" 
                         Padding="10,0">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="5" 
                                         Color="#40000000" 
                                         Direction="315" 
                                         ShadowDepth="2"/>
                        </TextBox.Effect>
                    </TextBox>

                    <!-- Телефон -->
                    <Label Content="Номер телефона:" 
                       Margin="0,77,10,0" 
                       VerticalAlignment="Top"/>
                    <TextBox x:Name="tbPhone" 
                         Margin="0,103,10,0" 
                         Height="25" 
                         TextWrapping="NoWrap"
                         VerticalContentAlignment="Center" 
                         VerticalAlignment="Top" 
                         Padding="10,0"
                         PreviewTextInput="PreviewTextInput">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="5" 
                                         Color="#40000000" 
                                         Direction="315" 
                                         ShadowDepth="2"/>
                        </TextBox.Effect>
                    </TextBox>

                    <!-- Страна (выпадающий список) -->
                    <Label Content="Страна:" 
                       Margin="10,0,10,0" 
                       VerticalAlignment="Top" 
                       Grid.Column="1"/>
                    <ComboBox x:Name="tbCountry" 
                          Margin="10,26,10,0" 
                          Height="25" 
                          VerticalAlignment="Top" 
                          Grid.Column="1"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id">
                        <ComboBox.Effect>
                            <DropShadowEffect BlurRadius="5" 
                                         Color="#40000000" 
                                         Direction="315" 
                                         ShadowDepth="2"/>
                        </ComboBox.Effect>
                    </ComboBox>

                    <!-- Email -->
                    <Label Content="Электронная почта:" 
                       Margin="10,77,10,0" 
                       VerticalAlignment="Top" 
                       Grid.Column="1"/>
                    <TextBox x:Name="tbEmail" 
                         Margin="10,103,10,0" 
                         Height="25" 
                         TextWrapping="NoWrap" 
                         VerticalContentAlignment="Center" 
                         VerticalAlignment="Top" 
                         Padding="10,0" 
                         Grid.Column="1">
                        <TextBox.Effect>
                            <DropShadowEffect BlurRadius="5" 
                                         Color="#40000000" 
                                         Direction="315" 
                                         ShadowDepth="2"/>
                        </TextBox.Effect>
                    </TextBox>

                    <!-- Кнопка сохранения -->
                    <Button x:Name="btnSave" 
                        Content="Сохранить" 
                        HorizontalAlignment="Right" 
                        Margin="0,0,10,10"
                        VerticalAlignment="Bottom" 
                        Width="100" 
                        Grid.Column="1" 
                        Height="32" 
                        BorderBrush="#FFFF9800"
                        Background="#FFFF9800" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        Click="SaveManufacturer_Click">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" 
                                         Color="#40000000" 
                                         Direction="315" 
                                         ShadowDepth="3"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>

