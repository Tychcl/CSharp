<Page x:Class="pr16.Pages.Speciality"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr16.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Speciality">

    <Grid Background="#F8F9FA" >
        <Grid Height="60" VerticalAlignment="Top" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="/Img/logo.png"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="Пермского Авиационного техникума им. А.Д. Швецова" HorizontalAlignment="Left" Margin="55,25,0,0" VerticalAlignment="Top"/>
        </Grid>
        <ScrollViewer Margin="0,60,0,0">
            <Grid x:Name="parent" Height="470">
                <Label Content="Специальность" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Label Content="Выберите специальность/-ти, на которой/-ых желаете учиться" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
                <Label Content="Можете выбрать несколько специальностей:" HorizontalAlignment="Left" Margin="20,67,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                <Grid x:Name="speciality" Margin="0,90,0,0">
                    <CheckBox Content="12.02.01 Авиационные приборы и комплексы" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="15.02.09 Аддитивные технологии" HorizontalAlignment="Left" Margin="22,15,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="09.02.07 Информационные системы и программирование (Программист)" HorizontalAlignment="Left" Margin="22,30,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="09.02.07 Информационные системы и программирование (Разработчик веб и мультимедийных приложений)" HorizontalAlignment="Left" Margin="22,45,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="09.02.01 Компьютерные системы и комплексы" HorizontalAlignment="Left" Margin="22,60,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="22.02.03 Литейное производство черных и цветных металлов" HorizontalAlignment="Left" Margin="22,75,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="15.02.10 Мехатроника и мобильная робототехника" HorizontalAlignment="Left" Margin="22,90,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="09.02.05 Прикладная информатика (по отраслям)" HorizontalAlignment="Left" Margin="22,105,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="24.02.02 Производство авиационных двигателей" HorizontalAlignment="Left" Margin="22,120,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="12.02.03 Радиоэлектронные приборные устройства" HorizontalAlignment="Left" Margin="22,135,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="15.02.08 Технология машиностроения" HorizontalAlignment="Left" Margin="22,150,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="15.02.15 Технология металлообрабатывающего производства" HorizontalAlignment="Left" Margin="22,165,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="27.02.07 Управление качеством продукции, процессов и услуг" HorizontalAlignment="Left" Margin="22,180,0,0" VerticalAlignment="Top"/>
                </Grid>
                <Label Content="СПО получаю" HorizontalAlignment="Left" Margin="10,290,0,0" VerticalAlignment="Top"/>
                <Label Content="Можете выбрать несколько специальностей:" HorizontalAlignment="Left" Margin="20,310,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                <RadioButton Content="Впервые" HorizontalAlignment="Left" Margin="22,330,0,0" VerticalAlignment="Top"/>
                <RadioButton Content="Не впервые" HorizontalAlignment="Left" Margin="22,345,0,0" VerticalAlignment="Top"/>
                <Grid x:Name="license" Margin="22,370,0,0" VerticalAlignment="Top" >
                    <CheckBox Content="C лицензией на право осуществления образовательной деятельности, свидетельством о гос. аккредитаци, правилами приема и ..." HorizontalAlignment="Center" VerticalAlignment="Center" Height="87" RenderTransformOrigin="0.5,0.5" Width="761"></CheckBox>
                </Grid>
                <Grid x:Name="document" HorizontalAlignment="Left" Margin="22,418,0,0" VerticalAlignment="Top" Width="761" Height="34">
                    <CheckBox Content="С датой представления оригиналов документов ознакомлен(а)" HorizontalAlignment="Left" Margin="6,-31,0,0" VerticalAlignment="Top" Height="25" RenderTransformOrigin="0.5,0.5" Width="611">

                    </CheckBox>
                </Grid>
                <Button Content="Продолжить" Click="NextPage" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="150" Height="25"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
