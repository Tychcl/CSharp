<Page x:Class="pr16.Pages.Passport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr16.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Passport">

    <Grid Background="#F8F9FA" >
        <Grid Height="60" VerticalAlignment="Top" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="/Img/logo.png"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="Пермского Авиационного техникума им. А.Д. Швецова" HorizontalAlignment="Left" Margin="55,25,0,0" VerticalAlignment="Top"/>
        </Grid>
        <ScrollViewer Margin="0,60,0,0" VerticalAlignment="Top">
            <Grid Height="580">
                <Label Content="Паспортные данные" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Grid VerticalAlignment="Top" Margin="0,50,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Фамилия:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25"/>
                    <TextBox x:Name="surname" Height="25" Margin="10,25,10,0"/>
                    <Label Content="Имя:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" Grid.Column="1"/>
                    <TextBox x:Name="name" Height="25" Margin="10,25,10,0" Grid.Column="1"/>
                    <Label Content="Отчество:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" Grid.Column="2"/>
                    <TextBox x:Name="patronymic" Height="25" Margin="10,25,10,0" Grid.Column="2"/>
                </Grid>
                <Label Content="Дата рождения:" VerticalAlignment="Top" Margin="10,100,0,0" Height="25" Grid.Column="2"/>
                <TextBox x:Name="birthday" Height="25" Margin="10,125,10,0" Grid.Column="2" VerticalAlignment="Top"/>
                <Label Content="Гражданство:" VerticalAlignment="Top" Margin="10,150,0,0" Height="25" Grid.Column="2"/>
                <TextBox x:Name="nationality" Height="25" Margin="10,175,10,0" Grid.Column="2" VerticalAlignment="Top"/>
                <Label Content="Место рождения:" VerticalAlignment="Top" Margin="10,200,0,0" Height="25" Grid.Column="2"/>
                <TextBox x:Name="bornPlace" Height="25" Margin="10,225,10,0" Grid.Column="2" VerticalAlignment="Top"/>
                <Grid VerticalAlignment="Top" Margin="0,250,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Серия и номер паспорта:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25"/>
                    <TextBox x:Name="SerialAndNumber" Height="25" Margin="10,25,10,0"/>
                    <Label Content="Дата выдачи:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" Grid.Column="1"/>
                    <TextBox x:Name="dateIssue" Height="25" Margin="10,25,10,0" Grid.Column="1"/>
                    <Label Content="Код подразделения:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" Grid.Column="2"/>
                    <TextBox x:Name="departamentCode" Height="25" Margin="10,25,10,0" Grid.Column="2"/>
                </Grid>
                <Label Content="Кем выдан:" VerticalAlignment="Top" Margin="10,300,0,0" Height="25" Grid.Column="2"/>
                <TextBox x:Name="issued" Height="25" Margin="10,325,10,0" Grid.Column="2" VerticalAlignment="Top"/>
                <Button Content="Продолжить" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="150" Height="25"/>
                <Grid Margin="0,350,0,0" VerticalAlignment="Top" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Адрес по прописке:" Height="25" Margin="10,0,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="registratedAdress" Height="25" Margin="10,25,10,0" VerticalAlignment="Top"/>
                    <Label Content="Район:" Height="25" Margin="10,0,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox x:Name="district" Height="25" Margin="10,25,10,0" VerticalAlignment="Top" Grid.Column="1"/>

                    <Label Content="фактический адрес:" Height="25" Margin="10,50,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="realAdress" Height="25" Margin="10,75,10,0" VerticalAlignment="Top"/>
                    <Label Content="Район:" Height="25" Margin="10,50,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <TextBox x:Name="realDistrict" Height="25" Margin="10,75,10,0" VerticalAlignment="Top" Grid.Column="1"/>
                </Grid>
                <Label Content="Прикрепите сканы страниц паспорта с фотографией и действующей пропиской" Height="25" Margin="10,450,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                <Label Content="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" HorizontalAlignment="Left" Margin="20,480,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                <Grid Height="25" VerticalAlignment="Top" Margin="0,505,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="educationPhoto" Height="25" Margin="10,0"/>
                    <Button x:Name="Select" Grid.Column="1" Content="Выбрать..." Margin="10,0"/>
                </Grid>
                <Button Content="Продолжить" Click="NextPage" HorizontalAlignment="Right" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="150" Height="25"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
