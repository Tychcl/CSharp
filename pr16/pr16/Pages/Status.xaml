<Page x:Class="pr16.Pages.Status"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr16.Pages"
      mc:Ignorable="d" 
        d:DesignHeight="380" d:DesignWidth="800"
  Title="Status">

    <Grid Background="#F8F9FA">
        <Grid Height="60" VerticalAlignment="Top" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="/Img/logo.png"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,1,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="Пермкого авиационного техникума им. А.Д.Швецова" HorizontalAlignment="Left" Margin="55,24,0,0" VerticalAlignment="Top"/>
        </Grid>
        <Grid Margin="0,40,0,0">
            <Label Content="Статус" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Имею статус" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
            <Label Content="Отметить при наличии:" HorizontalAlignment="Left" Margin="20,65,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
            <Grid x:Name="status" Margin="0,90,0,95">
                <CheckBox Content="ребенок-сирота/ребенок оставшийся без попечения родителей" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Top"/>
                <CheckBox Content="инвалид" HorizontalAlignment="Left" Margin="22,15,0,0" VerticalAlignment="Top"/>
                <CheckBox Content="малообеспеченный" HorizontalAlignment="Left" Margin="22,30,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Label Content="Приписное удостоверение (военный билет)" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top"/>
            <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" Margin="20,160,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
            <Grid x:Name="militaryTicket" VerticalAlignment="Top" Margin="0,185,0,0">
                <RadioButton Content="Имею(прикрепить сканы страниц документа)" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Top"/>
                <RadioButton Content="Не имею" HorizontalAlignment="Left" Margin="22,15,0,0" VerticalAlignment="Top"/>
            </Grid>
            <Label Content="Прикрепите сканы 1-ой и 2-ой страниц приписного удостоверения или военного билета (стр. 1-5,8-13,20-21) при их наличии" HorizontalAlignment="Left" Margin="10,220,0,0" VerticalAlignment="Top"/>
            <Label Content="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" HorizontalAlignment="Left" Margin="20,240,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
            <Grid Height="25" VerticalAlignment="Top" Margin="0,265,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="pathPhoto" Grid.Column="0" Height="25" Margin="10,0,0,0"/>
                <Button x:Name="choose" Click="chooseofd" Grid.Column="1" Content="Выбрать..." Margin="5,0,10,0"/>
            </Grid>
            <Button Click="NextPage" Content="Продолжить" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="25" Width="150"/>
        </Grid>
    </Grid>
</Page>
