<Page x:Class="pr16.Pages.Parents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr16.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Parents">

    <Grid Background="#F8F9FA" >
        <Grid Height="60" VerticalAlignment="Top" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="40" Source="/Img/logo.png"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,0,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
            <Label Content="Пермского Авиационного техникума им. А.Д. Швецова" HorizontalAlignment="Left" Margin="55,25,0,0" VerticalAlignment="Top"/>
        </Grid>
        <ScrollViewer Margin="0,60,0,0" VerticalAlignment="Top">
            <Grid x:Name="parent" Height="1190">
                <Label Content="Сведения о родителях(законных представителях)" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Label Content="Если родитель один, заполнить данные на одного родителя" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                <Label Content="Мать(или законный представитель):" VerticalAlignment="Top" Margin="10,50,0,0" Height="25"/>
                <Label Content="ФИО (полностью)" VerticalAlignment="Top" Margin="10,80,0,0" Height="25" />
                <TextBox x:Name="fioFemale" Height="25" Margin="10,105,10,0"  VerticalAlignment="Top"/>
                <Label Content="Дата рождения:" VerticalAlignment="Top" Margin="10,130,0,0" Height="25" />
                <TextBox x:Name="birthdayFemale" Height="25" Margin="10,155,10,0"  VerticalAlignment="Top"/>
                <Label Content="Место работы:" VerticalAlignment="Top" Margin="10,180,0,0" Height="25" />
                <TextBox x:Name="placeWorkFemale" Height="25" Margin="10,205,10,0"  VerticalAlignment="Top"/>
                <Label Content="Должность:" VerticalAlignment="Top" Margin="10,230,0,0" Height="25" Grid.Column="2"/>
                <TextBox x:Name="postFemale" Height="25" Margin="10,255,10,0"  VerticalAlignment="Top"/>
                <Label Content="Место жительства:" VerticalAlignment="Top" Margin="10,280,0,0" Height="25" />
                <TextBox x:Name="placeLifeFemale1" Height="25" Margin="10,305,10,0"  VerticalAlignment="Top"/>
                <Grid Margin="0,330,0,0" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Домашний телефон:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" />
                    <Label Content="(при наличии)" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                    <TextBox x:Name="homeNumberFemale" Height="25" Margin="10,60,10,0"  VerticalAlignment="Top"/>
                    <Label Content="Мобильный телефон:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" Grid.Column="1"/>
                    <Label Content="(при наличии)" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red" Grid.Column="1"/>
                    <TextBox x:Name="mobileNumberFemale" Height="25" Margin="10,60,10,0" Grid.Column="1" VerticalAlignment="Top"/>
                </Grid>
                <Label Content="Место жительства:" VerticalAlignment="Top" Margin="10,420,0,0" Height="25" />
                <TextBox x:Name="placeLifeFemale2" Height="25" Margin="10,445,10,0"  VerticalAlignment="Top"/>
                <Grid Margin="0,470,0,0" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Домашний телефон:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" />
                    <Label Content="(при наличии)" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                    <TextBox x:Name="homeNumberFemale2" Height="25" Margin="10,60,10,0"  VerticalAlignment="Top"/>
                    <Label Content="Мобильный телефон:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" Grid.Column="1"/>
                    <Label Content="(при наличии)" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red" Grid.Column="1"/>
                    <TextBox x:Name="mobileNumberFemale2" Height="25" Margin="10,60,10,0" Grid.Column="1" VerticalAlignment="Top"/>
                </Grid>
                <CheckBox Content="Настоящим подтверждаю, что данные на третьих лиц заполнены верно." Margin="10,560,0,0" VerticalAlignment="Top"/>

                <Label Content="Отец(или законный представитель):" VerticalAlignment="Top" Margin="10,600,0,0" Height="25"/>
                <Label Content="ФИО (полностью)" VerticalAlignment="Top" Margin="10,625,0,0" Height="25" />
                <TextBox x:Name="fioMale" Height="25" Margin="10,650,10,0"  VerticalAlignment="Top"/>
                <Label Content="Дата рождения:" VerticalAlignment="Top" Margin="10,675,0,0" Height="25" />
                <TextBox x:Name="birthdayMale" Height="25" Margin="10,700,10,0"  VerticalAlignment="Top"/>
                <Label Content="Место работы:" VerticalAlignment="Top" Margin="10,725,0,0" Height="25" />
                <TextBox x:Name="placeWorkMale" Height="25" Margin="10,750,10,0"  VerticalAlignment="Top"/>
                <Label Content="Должность:" VerticalAlignment="Top" Margin="10,775,0,0" Height="25" Grid.Column="2"/>
                <TextBox x:Name="postMale" Height="25" Margin="10,800,10,0"  VerticalAlignment="Top"/>
                <Label Content="Место жительства:" VerticalAlignment="Top" Margin="10,825,0,0" Height="25" />
                <TextBox x:Name="placeLifeMale1" Height="25" Margin="10,850,10,0"  VerticalAlignment="Top"/>
                <Grid Margin="0,875,0,0" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Домашний телефон:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" />
                    <Label Content="(при наличии)" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                    <TextBox x:Name="homeNumberMale1" Height="25" Margin="10,60,10,0"  VerticalAlignment="Top"/>
                    <Label Content="Мобильный телефон:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" Grid.Column="1"/>
                    <Label Content="(при наличии)" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red" Grid.Column="1"/>
                    <TextBox x:Name="mobileNumberMale1" Height="25" Margin="10,60,10,0" Grid.Column="1" VerticalAlignment="Top"/>
                </Grid>
                <Label Content="Место жительства:" VerticalAlignment="Top" Margin="10,960,0,0" Height="25" />
                <TextBox x:Name="placeLifeMale2" Height="25" Margin="10,985,10,0"  VerticalAlignment="Top"/>
                <Grid Margin="0,1010,0,0" VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Домашний телефон:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" />
                    <Label Content="(при наличии)" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red"/>
                    <TextBox x:Name="homeNumberMale2" Height="25" Margin="10,60,10,0"  VerticalAlignment="Top"/>
                    <Label Content="Мобильный телефон:" VerticalAlignment="Top" Margin="10,0,0,0" Height="25" Grid.Column="1"/>
                    <Label Content="(при наличии)" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top" Background="{x:Null}" FontSize="10" Foreground="Red" Grid.Column="1"/>
                    <TextBox x:Name="mobileNumberMale2" Height="25" Margin="10,60,10,0" Grid.Column="1" VerticalAlignment="Top"/>
                </Grid>
                <CheckBox Content="Настоящим подтверждаю, что данные на третьих лиц заполнены верно." Margin="10,1100,0,0" VerticalAlignment="Top"/>
                <Button Click="NextPage" Content="Продолжить" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="25" Width="150"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
