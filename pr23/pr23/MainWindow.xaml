<Window x:Class="pr23.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr23"
        mc:Ignorable="d"
        Title="Подарочки :3" Height="450" Width="600" ResizeMode="CanMinimize" Background="LightGray" Icon="Images/gift.png">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary Source="/Styles/Style.xaml" />
        </Grid.Resources>
        <StackPanel Orientation="Horizontal" Background="#424242" Height="60" VerticalAlignment="Top">
            <Image Source="/Images/gift.png" VerticalAlignment="Top" Margin="5,5,10,5" Style="{StaticResource Icon}"/>
            <Button Content="Заказать" Style="{StaticResource TopButton}" Click="GetOrder"/>
            <Button Content="Категории" Style="{StaticResource TopButton}" Click="GetCategory" Margin="10,0,0,0"/>
        </StackPanel>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden" VerticalAlignment="Top" Margin="0,60,0,0"/>
    </Grid>
</Window>
