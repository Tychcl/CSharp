<Page x:Class="pr23.Pages.Order_redac"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr23.Pages"
      mc:Ignorable="d" 
      Title="Order_redac" d:Width="580">
    <Grid Background="LightGray">
        <Grid.Resources>
            <ResourceDictionary Source="/Styles/BtnRes.xaml"/>
        </Grid.Resources>
        <StackPanel>
            <Label Content="ФИО"/>
            <TextBox x:Name="fio" Margin="5,0,5,0"/>
            <Label Content="Сообщение"/>
            <TextBox x:Name="msg" Margin="5,0,5,0"/>
            <Label Content="Адресс"/>
            <TextBox x:Name="adress" Margin="5,0,5,0"/>
            <Label Content="Email"/>
            <TextBox x:Name="email" Margin="5,0,5,0"/>
            <Label Content="Категория"/>
            <ComboBox  x:Name="combo" Margin="5,0,5,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource BtnRedac}" VerticalAlignment="Bottom" Height="40" Margin="0,7,5,7" Width="105" Click="Click_Call_Redact" HorizontalAlignment="Right">
                    <Image Source="/images/redac.png" Width="20" Height="20"/>
                </Button>
                <Button x:Name="btn_cancel"  Style="{StaticResource BtnRedac}" Background="#FFE48F2B" Margin="0,7,5,7" VerticalAlignment="Bottom" Height="40" Width="105" Click="Click_Cancel_Call_Redact" HorizontalAlignment="Right">
                    <Image Source="/images/back.png" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
