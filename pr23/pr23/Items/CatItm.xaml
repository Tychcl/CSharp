<UserControl x:Class="pr23.Items.CatItm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr23.Items"
             mc:Ignorable="d">
    <Grid>
        <Border x:Name="border" Opacity="1" Margin="10,7,10,7" Height="100" CornerRadius="7,7,7,7" Background="#FFF1F1F1">
            <Grid>
                <Grid.Resources>
                    <ResourceDictionary Source="/Styles/BtnRes.xaml"/>
                </Grid.Resources>
                <Label Content="Категория" x:Name="CatName" Margin="19,10,101,0" Foreground="Black" FontFamily="Corbel" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Height="35" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
                <Button Style="{StaticResource BtnRedac}" Background="#FF2C2C2C" Margin="0,5,9.6,0" VerticalAlignment="Top" Height="40" Width="63" Click="Click_redact" HorizontalAlignment="Right">
                    <Image Source="/images/redac.png" Width="20" Height="20"/>
                </Button>
                <Button Style="{StaticResource BtnRedac}" Background="#FFE42B2B" Margin="0,0,9.6,10" VerticalAlignment="Bottom" Height="40" Width="63" Click="Click_remove" HorizontalAlignment="Right">
                    <Image Source="/images/del.png" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
