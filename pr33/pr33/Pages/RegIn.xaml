<Page x:Class="pr33.Pages.RegIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr33.Pages"
      mc:Ignorable="d" 
      Title="RegIn" Background="Gray" Margin="15">
    <Grid Margin="0 0 0 15">
        <StackPanel>
            <Border Width="150" Height="150" Padding="0" CornerRadius="150" BorderThickness="0" BorderBrush="Black" MouseDown="SetImage">
                <Image x:Name="imgSource" Source="/Images/User.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <Label Content="Имя" FontSize="14" Margin="10 5 10 0"/>
            <TextBox x:Name="name" Margin="10 0 10 0"/>
            <Label Content="Телефон или почта" FontSize="14" Margin="10 5 10 0"/>
            <TextBox x:Name="phonemail" Margin="10 0 10 0"/>
            <Label Content="Пароль" FontSize="14" Margin="10 5 10 0"/>
            <TextBox x:Name="password" Margin="10 0 10 10"/>
            <Grid>
                <Button Margin="10 0 0 0" Click="back" HorizontalAlignment="Left" Content="Войти"/>
                <Button Margin="0 0 10 0" Click="reg" HorizontalAlignment="Right" Content="Зарегестрироваться"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
