<UserControl x:Class="pr33.Pages.Items.User"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr33.Pages.Items"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200" Margin="5" Background="Gray" MouseDown="choose">
    <StackPanel Orientation="Horizontal" Margin="3">
        <Border x:Name="online" HorizontalAlignment="Left" BorderBrush="DarkRed" BorderThickness="2" CornerRadius="50">
            <Image x:Name="imgSource" Source="/Images/User.png" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="90" Height="90"/>
        </Border>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Label x:Name="login" Content="Name" FontSize="18"/>
        </StackPanel>
    </StackPanel>
</UserControl>
